<div class="banner d-flex justify-content-between">
  <h1 class="py-3 ms-4"><%= @list.name %></h1>
  <div class="align-self-center mx-4">
    <%= link_to 'Add a movie', new_list_bookmark_path(@list), class: "btn btn-success me-4" %>
    <%= link_to 'Back to all lists', root_path, class: "btn btn-primary" %>
  </div>
</div>

<div class="d-flex m-4">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="card me-4" style="width: 18rem;">
      <img src= <%= bookmark.movie.poster_url %> class="card-img-top" alt="film-poster">
      <div class="card-body">
        <h5 class="card-title"><%= bookmark.movie.title%></h5>
        <p class="card-text"><em><%= bookmark.comment%></em></p>
        <%# want this to be an x instead %>
        <%= link_to 'Delete this movie from list',
          bookmark_path(bookmark),
          data: {turbo_method: :delete, turbo_confirm: "Are you sure?"},
          class: "btn btn-danger"
        %>
      </div>
    </div>
<% end %>
</div>
