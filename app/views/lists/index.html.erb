<div class="banner">
  <h1 class="py-4">My Watch Lists</h1>
  <%= link_to 'Add a new list', new_list_path, class: "btn btn-success" %>
</div>

<div class="d-flex m-4">
  <% @lists.each do |list| %>
    <div class="card me-4 card-custom" style="width: 18rem;">
    <%= image_tag "tom.JPG", class: "card-img-top", alt: "film-poster" %>
    <!--<img src="../../assets/images/placeholder.png" class="card-img-top" alt="film-poster">-->
      <div class="card-body">
        <h5 class="card-title"><%= link_to list.name, list_path(list) %></h5>
      </div>
    </div>
  <% end %>
</div>
